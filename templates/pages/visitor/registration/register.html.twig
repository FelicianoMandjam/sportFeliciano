{% extends "themes/base_visitor.html.twig" %}
{% block title %}Page Inscription{% endblock %}
{% block description %}Crée votre compte dans notre famille de sportifs. {% endblock %}
{% block keywords %} musculation, fitness, entraînement, exercices, santé, bien-être, performance sportive, nutrition, bodybuilding, sport, exercices physiques, entraînement musculaire, programme d'entraînement, équipement de fitness, conseils sportifs, développement musculaire, athlétisme, force physique, endurance, mode de vie actif, corps sain, motivation sportive , page inscription{% endblock %}
{# StyleSheet #}
{% block stylesheet %}/css/registration/app.css{% endblock %}


{% block main %}

    <body class="h-100">

        <div class="container text-white mt-5" id='form-container'>
            <div class="row">
                <div class="col-lg-5 d-flex justify-content-center align-items-center">
                    <img src="{{ asset('assets/images/visitor/registration/register_m.png') }}" class="img-fluid " alt="Inscrivez vous pour lire des articles sur la santé"> 
                </div>
                <div class="col-lg-7 d-flex flex-column justify-content-center align-items-center">

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    {{ form_start(registrationForm) }}
                        <div class="row">
{# --------------------------------------- #}

                        <div class:"titre"> 
   <h1><button data-text="Awesome" class="button">
    <span class="actual-text">&nbsp;Inscription&nbsp;</span>
    <span class="hover-text" aria-hidden="true">&nbsp;Inscription&nbsp;</span>
</button></h1>
</div>

{# ----------------------------------------------------- #}
                         {# <div> <h2 class="title text-center display-5">Inscription</h2> </div> #}
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="registration_form_firstName">Prénom</label>
                                    <div class="text-danger">{{ form_errors(registrationForm.firstName) }}</div>
                                    {{ form_widget(registrationForm.firstName, {'attr' : {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="registration_form_lastName">Nom</label>
                                    <div class="text-danger">{{ form_errors(registrationForm.lastName) }}</div>
                                    {{ form_widget(registrationForm.lastName, {'attr' : {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_email">Email</label>
                                    <div class="text-danger">{{ form_errors(registrationForm.email) }}</div>
                            {{ form_widget(registrationForm.email, {'attr' : {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_password_first">Mot de passe</label>
                            <div class="text-danger">{{ form_errors(registrationForm.password.first) }}</div>
                            {{ form_widget(registrationForm.password.first, {'attr' : {'class': 'form-control'}}) }}
                         <small><i>Le mot de passe doit contenir 12 càracteres minimun. Le mot de passe doit contentir au moins une lettre miniscule, majuscule, un chiffre et un caractère spécial. <i class="fa-solid fa-lock" style="color: #d31717;"></i> </i></small>
                        </div>
                       
                        <div class="mb-3">
                            <label for="registration_form_password_second">Confirmation du mot de passe</label>
                            {{ form_widget(registrationForm.password.second, {'attr' : {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="registration_form_agreeTerms">
                                <div class="text-danger">{{ form_errors(registrationForm.agreeTerms) }}</div>
                                {{ form_widget(registrationForm.agreeTerms) }}
                                Veuillez accepter <a data-bs-toggle="modal" data-bs-target="#registerModal" href="#">les conditions générales d'utilisation</a>

                                <!-- Modal -->
                                <div class="modal fade" id="registerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">

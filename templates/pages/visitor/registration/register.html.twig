                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                    </div>
                                </div>
                                </div>
                            </label>
                        </div>
                        <div class="mb-3">
                            <input value="Je m'inscris" formnovalidate type="submit" class="btn btn-warning w-100 shadow">
                        </div>
                    {{ form_end(registrationForm) }}

                    <p class="my-1">Vous avez déjà un compte ? <a href="">Connectez-vous</a></p>
                    <p class="my-1"><a href="{{path('visitor.welcome.index')}}">Retour à l'accueil</a></p>
                </div>
            </div>

</div>

                {% endblock %} 


